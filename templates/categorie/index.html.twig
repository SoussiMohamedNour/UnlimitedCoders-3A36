{% extends '/BackOffice/base_categorie.html.twig' %}


{% block title %}Categorie index{% endblock %}

{% block body %}
    <header class="main-header navbar">
    </header>
    <b class="screen-overlay"></b>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index.html" class="brand-wrap">
                <img src="{{ asset('images/LogoApp.png') }}" height="46" class="logo" alt="Healthified dashboard">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i> </button>
            </div>
        </div>
        <nav>

            <ul class="menu-aside">
                <li class="menu-item active">
                    {# <a class="menu-link" href="{{path('app_default')}}"> <i class="icon material-icons md-home"></i> #}
                        <span class="text">Acceuil</span>
                    </a>
                </li>
                <li class="menu-item ">
                    <a class="menu-link"  href="{{path('app_categorie_new')}}"> <i class="icon material-icons md-category"></i>
                        <span class="text">Ajouter Categorie</span>
                    </a>
                    <a class="menu-link"  href="{{path('app_produit_new')}}"> <i class="icon material-icons md-category"></i>
                        <span class="text">Ajouter Produits</span>
                    </a>
                    <a class="menu-link"  href="{{path('app_produit_index')}}"> <i class="icon material-icons md-category"></i>
                        <span class="text">Afficher produit</span>
                    </a>
                    <a class="menu-link"  href="{{path('app_commande_index')}}"> <i class="icon material-icons md-category"></i>
                        <span class="text">Afficher commande</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
<div style="
    margin-left: 300px;">
    <h1 >Liste de categorie</h1>
     <a href="{{ path('app_categorie_new') }}" class="btn btn-secondary">Create new</a>

    <table class="table" border="1"  cellpadding="5" cellspacing="10" width="100%">
        <thead>

            <tr>
                <th >Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c in categories %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.nom }}</td>
                <td>{{ c.description }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': c.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('app_categorie_edit', {'id': c.id}) }}" class="btn btn-secondary">edit</a>
                    <a href="{{ path('app_categorie_delete', {'id': c.id}) }}" class="btn btn-danger">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
</div>
   <script>flashy(message.message)</script>

{% endblock %}
