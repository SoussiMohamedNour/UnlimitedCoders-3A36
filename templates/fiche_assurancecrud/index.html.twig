    </style>{% endblock %}
{% block section %}
    <h1 style = "position:relative; left:500px; ">FicheAssurance index</h1>
<div  style = "position:relative; left:20px; top:100px;">
<div class="p-5" class="tbl-header">
            <section class="top-content bb d-flex justify-content-between">
    <table class="table" class="my-5 page" size="A4" style = "position:relative; left:200px; " >
        <thead>
            <tr>
                <th>Id</th>
                <th>CIN</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Addresse</th>
                <th>Matricule_cnam</th>
                <th>Matricule_fiscal</th>
                <th>Honoraires</th>
                <th>Designation</th>
                <th>Date</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche_assurance in ficheAssurances.data %}
            <tr>
                <td>{{ fiche_assurance.id }}</td>
                <td>{{ fiche_assurance.CIN }}</td>
                <td>{{ fiche_assurance.nom }}</td>
                <td>{{ fiche_assurance.prenom }}</td>
                <td>{{ fiche_assurance.addresse }}</td>
                <td>{{ fiche_assurance.matriculeCnam }}</td>
                <td>{{ fiche_assurance.matriculeFiscal }}</td>
                <td>{{ fiche_assurance.honoraires }}</td>
                <td>{{ fiche_assurance.designation }}</td>
                <td>{{ fiche_assurance.date ? fiche_assurance.date|date('Y-m-d') : '' }}</td>
                <td>{{ fiche_assurance.total }}</td>
                <td>
                    <a href="{{ path('app_fiche_assurancecrud_show', {'id': fiche_assurance.id}) }}">show</a>
                    <a href="{{ path('app_fiche_assurancecrud_edit', {'id': fiche_assurance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
       
        </tbody>
    </table>

    {% set path = 'app_fiche_assurancecrud_index' %}
    {% set pages = ficheAssurances.pages %}
    {% set currentPage = ficheAssurances.page %}
  {% if ficheAssurances.pages > 1 %}
        <nav aria-label="Page navigation example" style = "position:absolute; left:500px;top: 100%; ">
  <ul class="pagination">
  {% if currentPage > 1 %}
       {% endif %}
       {% if currentPage > 1 %}
                <li class="page-item">
                    <a href="{{ path(path, { page: currentPage - 1}) }}" class="page-link">Previous</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>    
                </li>
            {% endif %} {% for page in 1..pages %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                    <a href="{{ path(path, { page: page}) }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
                {% if currentPage < pages %}
                    <li class="page-item">
                        <a href="{{ path(path, { page: currentPage + 1}) }}" class="page-link">Next</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">Next</a>    
                    </li>
                {% endif %}
            </li>
        </ul>
    </nav>

 {% endif %}
</div></section>
{% endblock %}
