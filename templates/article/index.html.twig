{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Article_desc</th>
                <th>Article_date</th>
                <th>File</th>
                <th>Nbcomment</th>
                <th>Nblike</th>
                <th>Nbdislike</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.articleDesc }}</td>
                <td>{{ article.articleDate ? article.articleDate|date('Y-m-d') : '' }}</td>
                <td>{{ article.file }}</td>
                <td>{{ article.nbcomment }}</td>
                <td>{{ article.nblike }}</td>
                <td>{{ article.nbdislike }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
