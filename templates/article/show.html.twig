{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Article_desc</th>
                <td>{{ article.articleDesc }}</td>
            </tr>
            <tr>
                <th>Article_date</th>
                <td>{{ article.articleDate ? article.articleDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ article.file }}</td>
            </tr>
            <tr>
                <th>Nbcomment</th>
                <td>{{ article.nbcomment }}</td>
            </tr>
            <tr>
                <th>Nblike</th>
                <td>{{ article.nblike }}</td>
            </tr>
            <tr>
                <th>Nbdislike</th>
                <td>{{ article.nbdislike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
