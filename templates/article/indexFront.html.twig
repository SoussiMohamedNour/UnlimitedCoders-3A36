{% extends 'base.html.twig' %}
{% block articlesfront %}

    <div class="container">
        <div class="section-title">
    <h2>Nos Articles</h2>
        </div>
        <div class="intro">
            <div class="container">
                <!--<div class="row">
                    <div class="col">
                        <h2 class="intro_title text-center">Récemment publiée</h2>
                    </div>
                </div>-->

                <div class="row intro_items">
                    {% for article in articles %}
                    <div class="col-lg-4 intro_col">
                        <div class="intro_item">
                            <div class="intro_item_overlay"></div>
                            <!-- Image by https://unsplash.com/@dnevozhai -->
                            <div class="intro_item_background" style="background-image:url({{vich_uploader_asset(article,'imageFile') }})"></div>
                            <div class="intro_item_content d-flex flex-column align-items-center justify-content-center">

                                <div class="button intro_button"><div  class="btn-get-started scrollto"></div><a href="{{ path('app_article_showfront', {'id': article.id}) }}">Détails
                                        <span></span><span></span><span></span></a></div>
                                <div class="intro_center text-center">
                                    <h1>{{ article.titre }}</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                   {% endfor %}
                    <div class="blog_navigation">
                        <ul>
                            {{ knp_pagination_render(articles) }}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}