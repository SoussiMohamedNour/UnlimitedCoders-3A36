    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <canvas id="comments-chart" width="400" height="150"></canvas>
    <script>
        var ctx = document.getElementById('comments-chart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ articleCount|raw }},
                datasets: [{
                    label: 'Nombre de commentaires',
                    data:{{ nbcomment|raw }},
                    backgroundColor: 'rgba(54, 162, 235,0.55)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        console.log(document.getElementById("comments-chart"))
    </script>

{% endblock %}
