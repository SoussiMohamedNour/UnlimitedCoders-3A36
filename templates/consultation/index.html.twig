{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Matriculemedecin</th>
                <th>Idpatient</th>
                <th>Dateconsultation</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.reference }}</td>
                <td>{{ consultation.matriculemedecin }}</td>
                <td>{{ consultation.idpatient }}</td>
                <td>{{ consultation.dateconsultation ? consultation.dateconsultation|date('Y-m-d') : '' }}</td>
                <td>{{ consultation.montant }}</td>
                <td>
                    <a href="{{ path('app_consultation_show', {'reference': consultation.reference}) }}">show</a>
                    <a href="{{ path('app_consultation_edit', {'reference': consultation.reference}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_consultation_new') }}">Create new</a>
{% endblock %}
