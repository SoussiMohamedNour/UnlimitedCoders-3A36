{% extends 'BackOffice/medicaments/base.html.twig' %}

{% block title %}Medicaments{% endblock %}

{% block body %}

<section class="content-main">
    <div class="card mb-4">
        <div class="content-header">
            <h2 class="content-title">Supprimer Medicament</h2>
            <a href="{{ path('app_medicaments_index')}}" class="btn btn-outline-danger"> &times; Annuler</a>
        </div>
        <div class="card-body">
            <div class="table responsive">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Referencemedicament</th>
                            <td>{{ medicament.referencemedicament }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ medicament.nom }}</td>
                        </tr>
                        <tr>
                            <th>Dosage</th>
                            <td>{{ medicament.dosage }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ medicament.prix }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ medicament.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <a class="btn btn-primary" href="{{ path('app_medicaments_index') }}">Liste</a>
    <br>
    {{ include('BackOffice/medicaments/_delete_form.html.twig') }}
</section>
{% endblock %}
