{% extends 'BackOffice/consultation/base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block body %}

<section class="content-main">

<div class="card mb-4">
    <div class="content-header">
        <h2 class="content-title">Statistiques</h2>
        <a href="{{ path('app_ordonnance_index')}}" class="btn btn-outline-danger"> &times; Annuler</a>
    </div>
    <div class="card-body">
    	<div class="row">
		<div class="col-lg-4">
			<div class="card card-body mb-4">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-primary material-icons md-monetization_on"></i></span>
          <div class="text">
            <h6 class="mb-1">Total Consultations</h6>  <span> {{ total_consultation | raw }} TND</span>
          </div>
        </article> 
	               
	    </div> <!-- card  end// -->
		</div> <!-- col end// -->
		<div class="col-lg-4">
			<div class="card card-body mb-4">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-success material-icons md-local_shipping"></i></span>
          <div class="text">
            <h6 class="mb-1">Total commandes</h6> <span>100</span>
          </div>
        </article> 
	    </div> <!-- card end// -->
		</div> <!-- col end// -->
		<div class="col-lg-4">
			<div class="card card-body mb-4">
        <article class="icontext">
          <span class="icon icon-sm rounded-circle bg-warning-light"><i class="text-warning material-icons md-shopping_basket"></i></span>
          <div class="text">
            <h6 class="mb-1">Nombre Total Ordonnances </h6>  <span>{{total_ordonnance}} </span>
          </div>
        </article>
	    </div> <!--  end// -->
		</div> <!-- col end// -->
	</div> <!-- row end// -->

    </div>
</div>
</section>
{% endblock %}
