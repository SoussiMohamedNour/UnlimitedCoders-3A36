{% extends 'BackOffice/consultation/base.html.twig' %}

{% block title %}Liste Medicament{% endblock %}

{% block body %}
<section class="content-main">
<div class="card mb-4">
    <div class="content-header">
       <h2 class="content-title">Liste Des Médicaments</h2>
        <div>
            <a href="{{ path('app_medicament_new') }}"  class="btn btn-primary"><i class="material-icons md-plus"></i>Ajouter</a>
            <a href="{{ path('app_medicament_pdf') }}"  class="btn btn-primary"><i class="material-icons md-plus"></i>PDF</a>
        </div>
    </div>
    <div class="card-body">
{{ form_start(form) }}
{{ form_widget(form) }}
    </div>
     <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Dosage</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td>{{ medicament.id }}</td>
                <td>{{ medicament.nom }}</td>
                <td>{{ medicament.dosage }}</td>
                <td>{{ medicament.prix }}</td>
                <td>{{ medicament.description }}</td>
                <td>
                    <a href="{{ path('app_medicament_show', {'id': medicament.id}) }}">Supprimer</a>
                    <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Liste Médicaments vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
<div class="page-link" >
    {{ knp_pagination_render(medicaments) }}
</div>
    {# <a href="{{ path('app_medicament_new') }}">Ajouter</a> #}
</section>
{{ form_end(form) }}

{% endblock %}
