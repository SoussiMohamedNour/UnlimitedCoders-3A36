</head>
</html>

<body>
<b class="screen-overlay"></b>
<aside class="navbar-aside" id="offcanvas_aside">
    <div class="aside-top">
        <a href="/backoffice" class="brand-wrap">
            <img src="{{ asset('images/LogoApp.png') }}" height="46" class="logo" alt="Healthified dashboard">
        </a>
        <div>
            <button class="btn btn-icon btn-aside-minimize"><i class="text-muted material-icons md-menu_open"></i>
            </button>
        </div>
    </div>
    <nav>
        <ul class="menu-aside">
            <li class="menu-item active">
                <a class="menu-link" href="/backoffice"> <i class="icon material-icons md-home"></i>
                    <span class="text">Acceuil</span>
                </a>
            </li>


            <li class="menu-aside">
            <li class="menu-item active">
                <a class="menu-link" href="{{ path('app_calendrier_new') }}"> <i
                            class="icon material-icons md-comment"></i>
                    <span class="text">Indiquer disponibilité</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="{{ path('app_calendrier_index') }}"> <i
                            class="icon material-icons md-stars"></i>
                    <span class="text">Modifier disponibilité</span> </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="/planning"> <i class="icon material-icons md-stars"></i>
                    <span class="text">Consulter Planning</span> </a>
            </li>
        </ul>
        <br>
        <br>
    </nav>
</aside>
<main class="main-wrap">

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ calendrier.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ calendrier.date ? calendrier.date|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>HeureDebut</th>
            <td>{{ calendrier.heureDebut ? calendrier.heureDebut|date('H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>HeureFin</th>
            <td>{{ calendrier.heureFin ? calendrier.heureFin|date('H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_calendrier_index') }}" class="btn btn-medical"><i class="fas fa-chevron-left"></i> Back to
        List</a>

    <a href="{{ path('app_calendrier_edit', {'id': calendrier.id}) }}" class="btn btn-apple"><i class="fas fa-edit"></i>
        Edit</a>

    {{ include('calendrier/_delete_form.html.twig') }}
</main>
{% endblock %}
