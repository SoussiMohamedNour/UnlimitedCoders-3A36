{# {% extends 'base.html.twig' %} #}




{% block body %}
<link href="{{asset('/images/LogoApp.png') }}" rel="icon">
<link href="{{asset('css/index.css') }}" rel="stylesheet">


    <div class="login-page">
    <div class="form">
    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Votre Email:</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe:</label>
        <input type="password" id="password" name="_password"/>

        <input type="hidden" name="_target_path" value="{{ path('app_home') }}"/> 

        <button type="submit">Se Connecter</button>

        <div class="links-container">
        <a href="{{path('app_forgot_password_request')}}">Mot de passe oubli√©?</a>
        <a href="{{path('app_register')}}">Pas de compte?</a>
        
        </div>
    </form>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
  
  </div>
</div>

{% endblock %}