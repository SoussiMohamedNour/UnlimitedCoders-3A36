{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

{# {% include 'BackOffice/sidebar.html.twig'%} #}

<link href="{{asset('/images/LogoApp.png') }}" rel="icon">
<link href="{{asset('css/index.css') }}" rel="stylesheet">



    <div class="login-page">
    <div class="form">

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ utilisateur.age }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ utilisateur.sexe }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ utilisateur.numTel }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ utilisateur.cin }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ utilisateur.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            {# <tr>
                <th>Image</th>
                <td>{{ utilisateur.images }}</td>
            </tr> #}
        </tbody>
    </table>


    <div class="buttons-container">
    <a  href="{{ path('app_utilisateur_index') }}">
      <button>Back To List</button>
    </a>
    

    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">
      <button >Edit</button>
    </a>
    
    {{ include('utilisateur/_delete_form.html.twig') }}
    </div>
{% endblock %}
