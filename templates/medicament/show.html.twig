{% extends 'backoffice/base.html.twig' %}

{% block title %}Medicament{% endblock %}

{% block body %}
    <h1>Medicament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicament.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ medicament.code }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ medicament.libelle }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ medicament.prix }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ medicament.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_medicament_index') }}">Retourner</a>

    <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}">Modifier</a>

    {{ include('medicament/_delete_form.html.twig') }}
