{% if pageCount > 1 %}
    <ul class="pagination">
        {% if current == 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current - 1})) }}">Précédent</a></li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
            {% else %}
                <li class="page-item active"><a class="page-link" href="#">{{ page }}</a></li>
            {% endif %}
        {% endfor %}

        {% if current == pageCount %}
            <li class="page-item disabled"><a class="page-link" href="#">Suivant</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current + 1})) }}">Suivant</a></li>
        {% endif %}
    </ul>
{% endif %}
